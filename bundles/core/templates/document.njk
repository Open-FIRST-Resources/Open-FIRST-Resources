---
noOutput: true
---
{% extends 'core/templates/page.njk' %}

{% from 'core/macros/document_section.njk' import documentSection %}

{% block pageContent %}

  <h1>Document -> {{ title }}</h1>

  {% if sections %}
    {% import contentPath as file %}

    Sections:
    <ul>
      {% for section in sections %}
        {% for sectionID, sectionInfo in section %}
          <li><a href='#{{sectionID}}'>{{sectionInfo.title}}</a></li>
        {% endfor %}
      {% endfor %}
    </ul>

    {% for section in sections %}
      {{ documentSection(contentPath, section) }}
    {% endfor %}

  {% else %}
    {% filter markdown %}{% include contentPath %}{% endfilter %}

  {% endif %}

{% endblock %}